<div width="400px" data-message-user-id="<%= message.user.id %>">
    <p class="author">
        <span><%= message.user.first_name.capitalize %></span>
        <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
    </p>
    <p class="messages-chat"><%= message.content %></p>
    <% if message.image.attached? %>
        <div class="d-flex align-items-bottom messages-chat">
            <%= cl_image_tag message.image.key, height: 200, width: 200, crop: :fill %>
            <i class="fas fa-check px-2" style="color: rgba(150,150,150);margin-top: 74%;"></i>
        </div>
    <% end %>
</div>