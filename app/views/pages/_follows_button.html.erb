<% if current_user %>
  <% if current_user.favorited?(user) %>
    <div class="like-icon mx-2<%= 'red' if current_user.favorited?(user) %>" data-id="<%= user.id %>">
      <i class="">Following</i>
    </div>
  <% else %>
    <div class="like-icon mx-2<%= 'red' if current_user.favorited?(user) %>" data-id="<%= user.id %>">
      <i class="">Follow</i>
    </div>
  <% end %>
<% end %>
