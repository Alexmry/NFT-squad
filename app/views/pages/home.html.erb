<!------------------Banner-------------------------->
<div class="banner" style= "background-color: #c4c4c4;">
    <h1>Find & Showcase</h1>
    <h1>The hottest NFTs</h1>
  </div>

<!------ Searching for a friend --------------->
<div class="container mt-4">
    <div class="search-friend" style="width: 500px;">
        <%= form_for root_path, method: :get do %>
            <div class="row">
                <div class="col-8">
                    <%= text_field_tag :name,
                    params[:name],
                    class: "form-control",
                    placeholder: "Find a friend" 
                    %>
                </div>
                <div class="col-4">
                    <%= submit_tag "Search", class: 'btn btn-primary' %>
                </div>
            </div>
        <% end %>
        <div id="names_search">
            <% if !@users.nil? && @users != []%>
                <% if @users.length > 1 %>
                    <ul class="list-group">
                        <% @users.each do |user| %>
                            <div class="d-flex justify-content-between mt-2">
                                <div class="infos-user">
                                    <p style="margin-bottom: 0px"><%= user.first_name %> <%= user.last_name %></p>
                                </div>
                                <div class="link-user-page">
                                    <%= link_to "Profile", user_path(user), class: "link-friend-page" %>
                                </div>
                            </div>
                        <% end %>
                    </ul>
                <% else %>
                    <li class="list-group-item mt-2">
                        <div class="d-flex justify-content-between">
                            <div class="infos-user">
                                <p style="margin-bottom: 0px"><%= @users.first.first_name %> <%= @users.first.last_name %></p>
                            </div>
                            <div class="link-user-page">
                                <%= link_to "Profile", user_path(@users.first), class: "link-friend-page" %>
                            </div>
                        </div>
                    </li>
                <% end %>
            <% end %>
        </div>
    </div>
</div>
<!--------------END Searching for a friend------------------------->

<!-------Main container--------------->
<div class="main-container">
  <div class="card-left">
  </div>


  <div class="card-center">
    <% @nfts.each do |nft| %>
    <% if nft.image_url %>
    <div class="card-main">
    <div class="title-card">
      <%= image_tag "https://kitt.lewagon.com/placeholder/users/cveneziani", class: "avatar", alt: "avatar" %>
      <div class="title-card-block">
      <h4>Pierre Nitruhugwa</h4>
      <p>@pierresn</p>
      <p>6 minutes group</p>
      </div>
    </div>
      <p>Created<%=nft.name %></p>
      <%= image_tag nft.image_url, height: 175, width: 400, crop: :pad”%>
    <% end %>
    <div class="social-media-card">
      <i class="far fa-heart"></i>
      <i data-feather="message-circle"></i>
    </div>
  </div>
    <% end %>
  </div>
  <div class="card-right">
  </div>
</div>
<!------------End Main Container------------------->


