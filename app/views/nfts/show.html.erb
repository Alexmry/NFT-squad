<div class="container">
  <div class="bg-white">
    <div class="card-category d-flex align-items-center justify-content-center" style="background-color: black;">
      <div style="padding: 40px; object-fit: cover;">
        <%= image_tag @nft.image_url%>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-around card-product">
    <div class="nft-name">
      <h2><%=@nft.name %></h2>
    </div>
    <div class="card-product-infos">
      <p><%=@nft.description %></p>
      <p>Â£ <%=@nft.price %></p>
    </div>
  </div>

  <div class="d-flex justify-content-around">
    <div class="card bg-light">
      <p>Owned by</p>
    </div>
    <div class="card bg-light">
      <% @nft.comments.each do |comment|%>
      <p><%= comment.content %></p>
      <% end %>

      <%= simple_form_for [@nft, @comment] do |f| %>
      <%= f.input :content %>
      <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>


