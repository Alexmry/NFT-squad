<div class="card">
  <%= image_tag @nft.image_url, height: 175, width: 300, crop: :pad”%>
  <%=@nft.name %>
  <%=@nft.price %>
  <%=@nft.description %>

  <% @nft.comments.each do |comment|%>
    <p><%= comment.content %></p>
  <% end %>

  <%= simple_form_for [@nft, @comment] do |f| %>
  <%= f.input :content %>
  <%= f.submit %>
<% end %>
</div>
